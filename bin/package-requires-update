#!/usr/bin/env node

var exec = require( 'child_process' ).exec;
var packageJson = require( '../' + process.argv[2] );
var semver = require( 'semver' );

if ( packageJson.private ) {
	process.exitCode = 0;
}

exec( 'npm view ' + packageJson.name + ' version', function( error, stdout ) {
	if ( semver.gt( packageJson.version, stdout ) ) {
		process.exitCode = 0;
	} else {
		process.exitCode = 1;
	}
} );
