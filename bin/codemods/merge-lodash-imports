#!/usr/bin/env node

/*
	This codemod merges multiple named lodash imports into one

	How to use:
	./bin/codemods/merge-lodash-imports path-to-transform/
*/

/**
 * Internal dependencies
 */
const { runCodemod } = require( './src/helpers' );

runCodemod( ( config, args ) => [
	// jscodeshift options
	'--transform=bin/codemods/src/merge-lodash-imports.js',
	...config.jscodeshiftArgs,

	// Transform target
	...args,
] );
