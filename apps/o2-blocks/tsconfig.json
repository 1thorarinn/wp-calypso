{
	"extends": "@automattic/calypso-build/tsconfig",
	"exclude": [ "node_modules" ],
	"compilerOptions": {
		"target": "ES5",
		"lib": [ "DOM", "ES2015", "ScriptHost" ],
		"module": "ESNEXT",
		"allowJs": true,
		"checkJs": true,
		"jsx": "preserve",

		"strict": true,

		"typeRoots": [ "../../node_modules/@types" ],
		"types": [],

		"noEmitHelpers": true,
		"importHelpers": true
	}
}
