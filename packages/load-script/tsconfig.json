{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"declaration": true,
		"declarationDir": "types",
		"outDir": "./dist/esm",

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": [ "src/**/*" ],
	"exclude": [ "**/test/**/*", "**/docs/**/*" ]
}
